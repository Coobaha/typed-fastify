{
  "name": "@coobaha/typed-fastify",
  "description": "opinionated types for fastify",
  "version": "1.0.2",
  "bin": {
    "typed-fastify-schema": "bin/gen.bin.js",
    "tfs": "bin/gen.bin.js"
  },
  "dependencies": {
    "crypto-js": "^4.0.0",
    "escape-string-regexp": "^4.0.0",
    "glob": "^7.1.6",
    "json-schema-merge-allof": "^0.7.0",
    "json-schema-traverse": "^1.0.0",
    "typescript-json-schema": "^0.49.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.1",
    "@types/glob": "^7.1.3",
    "@types/json-schema-merge-allof": "^0.6.0",
    "@types/node": "^14.14.28",
    "@types/prettier": "^2.2.1",
    "@types/tap": "^14.10.2",
    "@types/yargs": "^16.0.0",
    "fastify": "^3.12.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "syncpack": "^5.7.11",
    "tap": "^14.11.0",
    "tsd": "^0.14.0",
    "type-fest": "^0.21.1",
    "typescript": "4.2.0-dev.20210123"
  },
  "directories": {
    "test": "test/",
    "bin": "bin",
    "lib": "lib"
  },
  "files": [
    "src",
    "lib",
    "bin",
    "!**/*/tsconfig.tsbuildinfo"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ],
    "package.json": [
      "syncpack format"
    ]
  },
  "main": "lib/index.js",
  "peerDependencies": {
    "fastify": "^3"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": "ssh://git@github.com/Coobaha/typed-fastify.git",
  "scripts": {
    "build": "tsc -p src && tsc -p generator",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "test": "tap test/*.test.ts -R terse"
  }
}
