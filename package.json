{
  "name": "@coobaha/typed-fastify",
  "description": "opinionated types for fastify",
  "version": "1.1.3",
  "bin": {
    "tfs": "bin/gen.bin.js",
    "typed-fastify-schema": "bin/gen.bin.js"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.11",
    "crypto-js": "^4.1.1",
    "glob": "^10.2.5",
    "json-schema-merge-allof": "^0.8.1",
    "json-schema-traverse": "^1.0.0",
    "typescript-json-schema": "^0.56.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@fastify/swagger": "^8.4.0",
    "@fastify/swagger-ui": "^1.8.1",
    "@types/crypto-js": "^4.1.1",
    "@types/glob": "^8.1.0",
    "@types/json-schema-merge-allof": "^0.6.1",
    "@types/node": "^20.2.1",
    "@types/prettier": "^2.7.2",
    "@types/split2": "^4.2.0",
    "@types/tap": "^15.0.8",
    "@types/yargs": "^17.0.24",
    "fastify": "^4.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pino-pretty": "^10.0.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "split2": "^4.2.0",
    "syncpack": "^9.8.6",
    "tap": "^16.3.4",
    "ts-node-dev": "^2.0.0",
    "tsd": "^0.28.1",
    "type-fest": "^3.10.0",
    "typescript": "^5.0.4"
  },
  "directories": {
    "test": "test/",
    "bin": "bin",
    "lib": "lib"
  },
  "files": [
    "{src,lib,bin}/**/*.{js,ts,map}"
  ],
  "homepage": "https://github.com/Coobaha/typed-fastify",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ],
    "package.json": [
      "syncpack format"
    ]
  },
  "main": "lib/index.js",
  "packageManager": "pnpm@8.5.0",
  "peerDependencies": {
    "fastify": "^4"
  },
  "repository": "ssh://git@github.com/Coobaha/typed-fastify.git",
  "scripts": {
    "build": "tsc -p src && tsc -p generator",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "preserver": "tsnd generator/gen.bin.ts gen 'test/test_schema.ts'",
    "pretest": "tsnd generator/gen.bin.ts gen 'test/test_schema.ts'",
    "server": "pnpm preserver && tsnd test/server.ts",
    "test": "pnpm pretest && pnpm test:types && pnpm test:integration",
    "test:integration": "TAP_TS=1 tap test/*.test.ts -R terse --no-check-coverage",
    "test:types": "tsc -p test/tsconfig.test.json"
  }
}
