{
  "name": "@coobaha/typed-fastify",
  "description": "opinionated types for fastify",
  "version": "4.0.0",
  "bin": {
    "tfs": "bin/gen.bin.js",
    "typed-fastify-schema": "bin/gen.bin.js"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.15",
    "chokidar": "4.0.3",
    "crypto-js": "^4.2.0",
    "glob": "^11.0.3",
    "json-schema-merge-allof": "^0.8.1",
    "json-schema-traverse": "^1.0.0",
    "std-env": "3.10.0",
    "type-fest": "^5.2.0",
    "typescript-json-schema": "^0.65.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/crypto-js": "^4.2.2",
    "@types/json-schema-merge-allof": "^0.6.5",
    "@types/node": "^24.10.0",
    "@types/split2": "^4.2.3",
    "@types/yargs": "^17.0.34",
    "ajv-formats": "3.0.1",
    "ajv-keywords": "5.1.0",
    "coveralls": "3.1.1",
    "fastify": "^5.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "pinst": "^3.0.0",
    "prettier": "^3.6.2",
    "split2": "^4.2.0",
    "syncpack": "^13.0.4",
    "tap": "^21.1.3",
    "ts-node-dev": "^2.0.0",
    "tsd": "^0.33.0",
    "typescript": "^5.9.3"
  },
  "directories": {
    "test": "test/",
    "bin": "bin",
    "lib": "lib"
  },
  "files": [
    "{src,lib,bin}/**/*.{js,ts,map}"
  ],
  "homepage": "https://github.com/Coobaha/typed-fastify",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ],
    "package.json": [
      "syncpack format"
    ]
  },
  "main": "lib/index.js",
  "packageManager": "pnpm@10.18.0",
  "peerDependencies": {
    "fastify": "^4"
  },
  "repository": "ssh://git@github.com/Coobaha/typed-fastify.git",
  "scripts": {
    "build": "tsc -p src && tsc -p generator",
    "format": "prettier --cache --write .",
    "postpublish": "pinst --enable",
    "prepare": "husky",
    "prepublishOnly": "pinst --disable",
    "preserver": "tsnd generator/gen.bin.ts gen 'test/test_schema.ts'",
    "pretest": "tsnd generator/gen.bin.ts gen 'test/test_schema.ts'",
    "server": "pnpm preserver && tsnd test/server.ts",
    "test": "NODE_ENV=test pnpm pretest && pnpm test:types && pnpm test:integration",
    "test:integration": "tap",
    "test:types": "tsc -p test/tsconfig.test.json"
  },
  "tap": {
    "include": [
      "test/*.test.ts"
    ],
    "reporter": "dot"
  }
}
